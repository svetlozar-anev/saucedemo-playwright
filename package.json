{
  "name": "saucedemo-playwright",
  "version": "1.0.0",
  "description": "Automated tests for saucedemo.com using Playwright and TypeScript",
  "scripts": {
  "test": "npx playwright test",
  "test:uc": "npx playwright test --grep",
  "test:headed": "npx playwright test --headed",
  "test:debug": "npx playwright test --debug",
  "test:chromium": "npx playwright test --project=chromium",
  "test:edge": "npx playwright test --project=edge",
  "show-report": "npx playwright show-report",
  "codegen": "npx playwright codegen https://www.saucedemo.com",
  "format": "prettier --write .",
  "lint": "prettier --check ."
},
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.54.2",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.3.0",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.38.0"
  }
}
